{
  "name": "my-weekly-menu",
  "version": "0.1.0",
  "private": true,
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/setupTests.js"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "@fontsource/montserrat": "^4.5.4",
